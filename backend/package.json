{
  "name": "windsurf-backend",
  "version": "1.0.0",
  "description": "AI Travel Assistant Backend - Gemini + Express",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
